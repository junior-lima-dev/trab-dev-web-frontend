    <div class="col-md-3 shadow">
      <div class="t-products shadow p-2">
        <h6 class="text-uppercase">Computer & Periferals</h6>
        <div class="p-lists">
          <div class="d-flex justify-content-between mt-2">
            <span>Laptops</span> <span>23</span>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <span>Desktops</span> <span>46</span>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <span>Monitors</span> <span>13</span>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <span>Mouse</span> <span>33</span>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <span>Keyboard</span> <span>12</span>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <span>Printer</span> <span>53</span>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <span>Mobiles</span> <span>203</span>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <span>CPU</span> <span>23</span>
          </div>
        </div>
      </div>

      <div class="brand shadow p-2">
        <div class="heading d-flex justify-content-between align-items-center">
          <h6 class="text-uppercase">Brand</h6>
          <span>--</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" />
            <label class="form-check-label"> Apple </label>
          </div>
          <span>13</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" checked />
            <label class="form-check-label"> Asus </label>
          </div>
          <span>4</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" checked />
            <label class="form-check-label"> Dell </label>
          </div>
          <span>24</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" checked />
            <label class="form-check-label"> Lenovo </label>
          </div>
          <span>18</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" checked />
            <label class="form-check-label"> Acer </label>
          </div>
          <span>44</span>
        </div>
      </div>
      <div class="type shadow p-2 mb-2">
        <div class="heading d-flex justify-content-between align-items-center">
          <h6 class="text-uppercase">Type</h6>
          <span>--</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" />
            <label class="form-check-label"> Hybrid </label>
          </div>
          <span>23</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" checked />
            <label class="form-check-label"> Laptop </label>
          </div>
          <span>24</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" checked />
            <label class="form-check-label"> Desktop </label>
          </div>
          <span>14</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" checked />
            <label class="form-check-label"> Touch </label>
          </div>
          <span>28</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" checked />
            <label class="form-check-label"> Tablets </label>
          </div>
          <span>44</span>
        </div>
      </div>
      <button
        class="btn btn-primary text-uppercase accessible-font-size"
        style="background-color: #ec8712; width: 100%"
        onclick="teste123()"
      >
        Filtrar produtos
      </button>
    </div>
    <div class="col-md-9">
        <div class="row g-2">
            <% data.forEach((element) => {%>
            <div class="col-md-4 ">
                <div class="product shadow py-4"> <span class="off bg-success">-25% OFF</span>
                    <div class="text-center"> <img src="<%= element.ds_imagem %>"  style="width: 200px; height: 200px;" alt="img" width="200" height="200"> </div>
                    <div class="about text-center ">
                        <h5 class="accessible-font-size"><%= element.nome %></h5> <span class="accessible-font-size"><%= element.valor %></span>
                    </div>
                    <div class="cart-button mt-3 px-2 d-flex justify-content-between align-items-center"> 
                        <button 
                            class="btn btn-primary text-uppercase accessible-font-size"
                            onclick="location.href='/product-detail?productId=<%= element.id %>'"
                        >
                            Ver detalhes
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
  </div>
</div>
<%- include('../partials/layout-footer') %>
